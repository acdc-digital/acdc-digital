{
  "name": "@acdc-digital/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ACDC Digital workspace with Next.js and Convex",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter acdc-digital dev",
    "convex": "pnpm --filter acdc-digital convex",
    "build": "pnpm --filter acdc-digital build",
    "start": "pnpm --filter acdc-digital start",
    "lint": "pnpm --filter acdc-digital lint",
    "type-check": "pnpm --filter acdc-digital type-check",
    "clean": "pnpm --filter acdc-digital clean && rm -rf node_modules",
    "db:clear": "pnpm --filter acdc-digital db:clear",
    "db:clear-chat": "pnpm --filter acdc-digital db:clear-chat",
    "db:clear-docs": "pnpm --filter acdc-digital db:clear-docs",
    "dev:smnb": "pnpm --filter smnb dev",
    "build:smnb": "pnpm --filter smnb build",
    "start:smnb": "pnpm --filter smnb start",
    "lint:smnb": "pnpm --filter smnb lint",
    "convex:smnb": "cd smnb/smnb && npx convex dev",
    "clean:smnb": "pnpm --filter smnb clean",
    "clean:smnb-stats": "cd smnb/smnb && npx convex run clearDatabase:getDatabaseStats",
    "clean:smnb-analytics": "cd smnb/smnb && npx convex run clearDatabase:clearSpecificTables '{\"tables\": [\"post_stats\", \"pipeline_stats\", \"system_events\", \"rate_limits\", \"engagement_stats\", \"aggregate_stats\"]}'",
    "clean:smnb-largest": "cd smnb/smnb && npx convex run clearDatabase:clearLargestTables",
    "dev:aura": "pnpm --filter aura dev",
    "build:aura": "pnpm --filter aura build",
    "start:aura": "pnpm --filter aura start",
    "lint:aura": "pnpm --filter aura lint",
    "convex:aura": "cd aura/AURA && npx convex dev",
    "state:aura": "cd aura/AURA && npx tsx app/tests/state/state-audit.ts",
    "structure:aura": "cd aura/AURA && npx tsx app/tests/structure/structure.ts",
    "cleanup:aura": "cd aura/AURA && node scripts/cleanup-database.js",
    "dev:ruuf": "pnpm --filter ruff dev",
    "build:ruuf": "pnpm --filter ruff build",
    "start:ruuf": "pnpm --filter ruff start",
    "lint:ruuf": "pnpm --filter ruff lint",
    "type-check:ruuf": "pnpm --filter ruff type-check",
    "convex:ruuf": "cd ruuf/ruff && npx convex dev",
    "dev:grapes": "pnpm --filter grapes dev",
    "build:grapes": "pnpm --filter grapes build",
    "start:grapes": "pnpm --filter grapes start",
    "lint:grapes": "pnpm --filter grapes lint",
    "convex:grapes": "cd grapes/grapes && npx convex dev"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "next.js",
    "convex",
    "typescript",
    "workspace",
    "pnpm"
  ],
  "author": "ACDC Digital",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "zustand": "^5.0.8"
  }
}
