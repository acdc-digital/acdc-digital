{
  "name": "smnb-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for SMNB Session Manager - provides database access for AI assistant",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/http-server.js",
    "start:stdio": "node dist/index.js",
    "dev": "tsx watch src/http-server.ts",
    "dev:stdio": "tsx watch src/index.ts",
    "test": "npm run build && tsx src/test.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": ["mcp", "model-context-protocol", "smnb", "convex", "news-studio"],
  "author": "ACDC Digital",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "convex": "^1.17.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}