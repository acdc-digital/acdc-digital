*.eot binary

# Videos
*.mp4 binary
*.webm binary
*.mov binary

# Audio
*.mp3 binary
*.wav binary
*.ogg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# PDFs and documents
*.pdf binary
*.doc binary
*.docx binary

# Compiled/build outputs
*.min.js binary linguist-generated=true
*.min.css binary linguist-generated=true
.next/* linguist-generated=true
out/* linguist-generated=true
dist/* linguist-generated=true
build/* linguist-generated=true

# Language statistics (GitHub language detection)
# Helps GitHub properly categorize your repository
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.css linguist-language=CSS
tailwind.config.* linguist-language=JavaScript
postcss.config.* linguist-language=JavaScript

# Vendor files (exclude from language statistics)
**/vendor/* linguist-vendored
**/node_modules/* linguist-vendored
**/.pnpm/* linguist-vendored
public/vendor/* linguist-vendored

# Generated files (exclude from diffs and language stats)
**/generated/* linguist-generated
**/_generated/* linguist-generated
*.generated.* linguist-generated
*-lock.json linguist-generated
*-lock.yaml linguist-generated

# Documentation (include in language statistics)
docs/* linguist-documentation
*.md linguist-documentation=false

# Diff settings for better readability
*.md diff=markdown
*.mdx diff=markdown
*.json diff=json
*.css diff=css
*.html diff=html

# Export ignore (files to exclude from archives)
.github export-ignore
.vscode export-ignore
.husky export-ignore
tests export-ignore
*.test.ts export-ignore
*.test.tsx export-ignore
*.spec.ts export-ignore
*.spec.tsx export-ignore
.env.example export-ignore
.gitattributes export-ignore
.gitignore export-ignore
.prettierrc export-ignore
.eslintrc export-ignore