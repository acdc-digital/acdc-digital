{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/convex/*": [
        "./convex/*"
      ],
      "@/*": [
        "./*"
      ],
      "@/dashboard/*": [
        "./app/dashboard/*"
      ],
      "@/dashboard/heatmap/*": [
        "./app/dashboard/heatmap/*"
      ],
      "@/dashboard/base/*": [
        "./app/dashboard/base/*"
      ],
      "@/dashboard/soloist/*": [
        "./app/dashboard/soloist/*"
      ],
      "@/dashboard/canvas/*": [
        "./app/dashboard/canvas/*"
      ],
      "@/dashboard/user/*": [
        "./app/dashboard/user/*"
      ],
      "@/dashboard/help/*": [
        "./app/dashboard/help/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
